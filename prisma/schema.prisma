datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trip {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  plate     String?
  BusId     Int?
  start     String?
  where     String?
  date      String?
  starttime      String?
  reachtime      String?
  price      Int?
  decker     Int?
  type     String?
  bus    BusAgency?   @relation(fields: [busId], references: [id])
   busId  String  @db.ObjectId
}

model BusAgency {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
  phone String?
  password String?
  trips Trip[]


}